{
  "name": "whatismybalance",
  "version": "1.0.0",
  "description": "Mini app showing balance",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "",
    "roots": [
      "tests/"
    ],
    "testRegex": "spec\\.ts$",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts"
  },
  "author": "Sam Sukiasian",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg2": "^0.0.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.35.1",
    "umzug": "^3.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^8.44.8",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^2.0.16",
    "@types/umzug": "^2.3.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-typescript": "^2.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
